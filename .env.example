# Database Configuration
PG_DB=example_db
PG_USER=example_user
PG_PASSWORD=example_password

# MinIO S3-compatible Storage
MINIO_ROOT_USER=example_minio_user
MINIO_ROOT_PASSWORD=example_minio_pass
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1

# Trino Configuration
TRINO_CATALOG=lake

# Airflow Configuration
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin_password
AIRFLOW_ADMIN_EMAIL=admin@example.com
# IMPORTANT: Generate your own Fernet key using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=CHANGE_ME_GENERATE_NEW_KEY

# Observability
GRAFANA_ADMIN_PASSWORD=admin_password

# JVM Memory Settings
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
TRINO_MAX_MEMORY=2GB

# Optional: JMX Monitoring
ENABLE_JMX=false
JMX_PORT=9999